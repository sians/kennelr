<%= simple_form_for(@kennel) do |f| %>
    <div class="input-field">
      <%= f.input :name,
                  label: false,
                  placeholder: "Kennel name" %>
    </div>
    <div class="input-field">
      <%= f.input :address,
                  label: false,
                  placeholder: "4 Baytree Lane" %>
    </div>
    <div class="input-field">
      <%= f.input :capacity,
                  label: false,
                  placeholder: 20 %>
    </div>
    <div class="input-field">
      <%= f.input :description,
                  label: false,
                  placeholder: "Some information about your kennels" %>
    </div>
    <div class="input-field">
      <%= f.input :day_care %>
      <%= f.input :dog_walking %>
      <%= f.input :behaviorist %>
      <%= f.input :daily_price %>
    </div>

    <%= link_to 'Cancel', profile_path, class: 'btn btn-submit btn-cancel' %>
    <%= f.button :submit, class: "btn-submit"%>
<% end %>
