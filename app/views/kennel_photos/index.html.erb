
<div class="photo-container">
  <h3><%= @kennel.name %></h3>
  <div class="stars">
    <i class="fas fa-star"></i>
    <i class="fas fa-star"></i>
    <i class="fas fa-star"></i>
    <i class="fas fa-star"></i>
    <i class="fas fa-star"></i>
    <% if @kennel.total_rating.nil? %>
      <span class="small">(No reviews yet)  .  </span><%= @kennel.address %>
    <% end %>
  </div>
</div>

<div class="show-nav stick">
  <ul>
    <li><%= link_to 'Overview', kennel_path(@kennel) %></li>
    <li class="active"><%= link_to 'Photos', kennel_photos_path(@kennel)%></li>
    <li>Reviews</li>
    <li>Location</li>
  </ul>
</div>

<div class="photo-container">
  <div class="display-kennel-photos">
    <% if @kennel.kennel_photos.empty? %>

    <% elsif @kennel.kennel_photos.size >= 3 %>
      <% @kennel.kennel_photos.each do |photo| %>
        <%= image_tag photo.photo_url, class: 'primary-photo' %>
      <% end %>
    <% else %>
      <%= image_tag @kennel.kennel_photos.first.photo_url %>
    <% end %>
  </div>
</div>
